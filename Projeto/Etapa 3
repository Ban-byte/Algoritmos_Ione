#include <stdio.h>

#include <stdio.h>

#include <stdio.h>

int main() {
    char next;
    int nota_algoritmos, nota_design, nota_modelagem, nota_frontend;

    printf("=== Calculadora de Estatísticas de Notas ===\n");

    for (int contador = 1; contador <= 4; contador++) {
        printf("Deseja inserir notas do %dº semestre? (s ou n): ", contador);
        scanf(" %c", &next);

        if (next == 's' || next == 'S') {
            printf("-- Notas do %dº semestre: \n", contador);

            printf("Digite a nota de Algoritmos e Pensamentos Computacionais: ");
            scanf("%d", &nota_algoritmos);

            printf("Digite a nota de Design Profissional: ");
            scanf("%d", &nota_design);

            printf("Digite a nota de Modelagem de Banco de Dados: ");
            scanf("%d", &nota_modelagem);

            printf("Digite a nota de Desenvolvimento Front-End para Web: ");
            scanf("%d", &nota_frontend);

        } else {
            printf("Notas do %dº semestre não inseridas.\n\n", contador);
        }
    }

    if (nota_algoritmos < 0 || nota_algoritmos > 10) {
        printf("Este valor não e valido\n");
    }
    else {
        printf("Algoritmos e Pensamentos Computacionais: %.d\n", nota_algoritmos);
    }

    if (nota_design < 0 || nota_design > 10) {
        printf("Este valor não e valido\n");
    }
    else {
        printf("Design Profissional: %.d\n", nota_design);
    }

    if (nota_modelagem < 0 || nota_modelagem > 10) {
        printf("Este valor não e valido\n");
    }
    else {
        printf("Modelagem de banco de dados: %.d\n", nota_modelagem);
    }

    if (nota_frontend < 0 || nota_frontend > 10) {
        printf("Este valor não e valido\n");
    }
    else {
        printf("Desenvolvimento frontend para web: %.d\n", nota_frontend);
    }

}
